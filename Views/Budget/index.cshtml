@model BudgetViewModel

<div class="container mt-4">
    <h2>Budget Overview</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Budget Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Salary:</strong> @Model.Salary.ToString("C")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Year:</strong> @Model.Year</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var mainCategory in Model.MainCategories)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>@mainCategory.TypeName</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Amount:</strong> @mainCategory.TotalAmount.ToString("C")</p>
                        <p><strong>Percentage:</strong> @mainCategory.Percentage%</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Budget" asp-action="Index" class="btn btn-primary">Manage Budget</a>
    </div>
</div>