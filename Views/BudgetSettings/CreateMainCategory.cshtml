@model CreateMainCategoryViewModel

<div class="container mt-4">
    <h2>Create Main Category</h2>

    <form asp-action="CreateMainCategory" method="post">
        <div class="form-group">
            <label asp-for="Type">Category Type</label>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<MainCategoryType>()" class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Percentage">Total Amount</label>
            <input asp-for="Percentage" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>