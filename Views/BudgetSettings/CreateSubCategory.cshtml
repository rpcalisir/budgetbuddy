@model CreateSubCategoryViewModel

<div class="container mt-4">
    <h2>Create Sub Category</h2>

    <form asp-action="CreateSubCategory" method="post">
        <div class="form-group">
            <label asp-for="MainCategoryId">Main Category</label>
            <select asp-for="MainCategoryId" class="form-control">
                @foreach (var category in ViewBag.MainCategories)
                {
                    <option value="@category.Id">@category.TypeName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>